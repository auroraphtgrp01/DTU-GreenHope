{
  "compilerOptions": {
    "esModuleInterop": true,
    "moduleResolution": "node",
    "jsx": "react",
    "target": "esnext",
    "module": "esnext",
    "allowJs": true,
    "noUnusedLocals": false,
    "preserveConstEnums": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "inlineSources": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationDir": "./dist/types",
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "baseUrl": ".",
    "outDir": "./dist"
  }
}
